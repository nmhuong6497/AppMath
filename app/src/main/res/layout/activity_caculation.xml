<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tinhtoan">

    <TextView
        android:id="@+id/text_view_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="100"
        android:textColor="#3F51B5"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:paddingHorizontal="12dp"
        android:gravity="center"
        android:background="#FFEBEA"
        android:id="@+id/text_view_time"
        android:textColor="#f20"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_correct" />

    <TextView
        android:id="@+id/text_view_caculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#008778"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        tools:text="1 + 2 = 3" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button"
        android:textSize="20sp"
        android:textColor="#2E2E2E"
        android:id="@+id/button_correct"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_caculation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:text="A. Đúng" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#2E2E2E"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:id="@+id/button_wrong"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_caculation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="45dp"
        android:text="B. Sai"/>

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#2E2E2E"
        android:background="@drawable/button_reset"
        android:textSize="20sp"
        android:id="@+id/button_reset"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Bài mới"/>

    <ImageView
        android:layout_marginTop="4dp"
        android:id="@+id/image_history"
        android:layout_marginEnd="55sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_point"
        app:layout_constraintTop_toTopOf="@+id/text_view_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_history"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>